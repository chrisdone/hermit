  ghc-options: -Wall -fno-warn-orphans
  Build-Depends: base >= 4 && < 5,
                 aeson,
                 ansi-terminal >= 0.5.5,
                 containers,
                 data-default >= 0.4,
                 ghc >= 7.4,
                 haskeline >= 0.6.4.7 && < 0.7,
                 kure >= 2.1.25,
                 marked-pretty >= 0.1,
                 mtl,
                 stm,
                 template-haskell,
                 text

  default-language: Haskell2010

  Exposed-modules:
